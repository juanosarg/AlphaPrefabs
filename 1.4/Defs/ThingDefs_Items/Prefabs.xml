<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="ResourceBase" Name="AP_PrefabBase" Abstract="True">
		
		<resourceReadoutPriority>Middle</resourceReadoutPriority>
		<thingClass>AlphaPrefabs.Thing_Prefab</thingClass>
		<useHitPoints>true</useHitPoints>
		<statBases>
			<MaxHitPoints>80</MaxHitPoints>
			<Mass>0.2</Mass>
			<DeteriorationRate>2.0</DeteriorationRate>
			<Flammability>0.2</Flammability>
		</statBases>
		<stackLimit>1</stackLimit>
		<tradeability>All</tradeability>
		<tradeNeverGenerateStacked>true</tradeNeverGenerateStacked>
		<healthAffectsPrice>false</healthAffectsPrice>
		<thingCategories>
			<li>AP_Prefabs</li>
		</thingCategories>
		<techLevel>Industrial</techLevel>
		<tradeTags>
			<li>Prefabs</li>
		</tradeTags>
		<thingSetMakerTags>
			<li>NotForGuests</li>
			<li>RewardStandardMidFreq</li>
		</thingSetMakerTags>
	</ThingDef>
	<ThingDef ParentName="AP_PrefabBase">
		<defName>AP_Prefab</defName>
		<label>prefab box</label>
		<description>A heavy-duty metal box containing a powerful mechanite dispersal unit capable of assembling a prefab structure in a matter of seconds.\n\n&lt;color=#E5E54C&gt;Gameplay effect:&lt;/color&gt; The prefab box needs to be deployed by a colonist, placing it in the desired location. For that, select a colonist and right click the prefab box, selecting a tile of passable terrain.</description>
		<graphicData>
			<texPath>Things/Item/AP_PrefabItem</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		
		<statBases>
			<MarketValue>100</MarketValue>
		</statBases>
		<comps>
			<li Class="CompProperties_Usable">
				<useJob>UseItem</useJob>
				<useLabel>Deploy prefab builder</useLabel>
				<useDuration>60</useDuration>
			</li>
			<li Class="CompProperties_Targetable">
				<compClass>AlphaPrefabs.CompTargetable_Ground</compClass>
			</li>
			
			
		</comps>
		<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
		<placeWorkers>
			<li>AlphaPrefabs.PlaceWorker_ShowPrefabBoxAsItem</li>
		</placeWorkers>
	</ThingDef>
	
	
	
</Defs>
