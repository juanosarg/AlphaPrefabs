				<DesignationCategoryDef>
					<defName>AP_AlphaPrefabsTab</defName>
					<label>Prefabs</label>
					<description>Items added by Alpha Prefabs.</description>
					<order>450</order>
					<specialDesignatorClasses>
						<li>Designator_Cancel</li>
						<li>Designator_Deconstruct</li>
					</specialDesignatorClasses>
				</DesignationCategoryDef>
			</value>
		</match>
	</Operation>
	<Operation Class="AlphaPrefabs.PatchOperationModOption">
